<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="video">
        <appearances>
            <appearance name="default">
                <elements>
                    <element name="video">
                        <attribute name="poster" source="poster" converter="Magento_PageBuilder/js/converter/attribute/src" preview_converter="Magento_PageBuilder/js/converter/attribute/preview/src"/>
                        <attribute name="video_type" source="data-video-type" />
                        <attribute name="video_source_upload" source="src" converter="Albert_PageBuilder/js/content-type/video/converter/attribute/videosrc-uploader" preview_converter="Albert_PageBuilder/js/content-type/video/converter/attribute/preview/videosrc"/>
                        <attribute name="video_source" source="src" converter="Albert_PageBuilder/js/content-type/video/converter/attribute/videosrc" preview_converter="Albert_PageBuilder/js/content-type/video/converter/attribute/preview/videosrc"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
